# MongoDB
MONGODB_URL=mongodb+srv://<USERNAME>:<PASSWORD>@<CLUSTER_URL>

# Frontend and Backend
FRONTEND_URL=http://localhost:5173
DOMAIN=http://localhost:5173
PORT=5174
NODE_ENV=development
CORS_ORIGIN=*

# JWT Secrets and Expiry
ACCESS_TOKEN_SECRET=your_access_token_secret
ACCESS_TOKEN_EXPIRY=1h
REFRESH_TOKEN_SECRET=your_refresh_token_secret
REFRESH_TOKEN_EXPIRY=10d

# Admin Emails
ADMIN_EMAILS=admin@example.com

# Cloudinary
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Razorpay
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
# For production, uncomment and use the live keys
# RAZORPAY_KEY_ID=your_razorpay_live_key_id
# RAZORPAY_KEY_SECRET=your_razorpay_live_key_secret

# AI Service Tokens (Replicate, Leonardo, Nebius, Hailuo)
REPLICATE_API_TOKEN=your_replicate_api_token
LEONARDO_API_TOKEN=your_leonardo_api_token
NEBIUS_API_KEY=your_nebius_api_key
HAILUO_API_TOKEN=your_hailuo_api_token

# Email (Mailtrap/Brevo/SMTP)
MAILTRAP_HOST=smtp-relay.brevo.com
MAILTRAP_PORT=587
MAILTRAP_USERNAME=your_smtp_username
MAILTRAP_PASSWORD=your_smtp_password

# Optional alternative SMTP services
# MAILTRAP_HOST=pro.turbo-smtp.com
# MAILTRAP_PORT=587
# MAILTRAP_USERNAME=your_email@example.com
# MAILTRAP_PASSWORD=your_smtp_password

# Dodo Payments
DODO_PAYMENTS_API_KEY=your_dodo_api_key
DODO_API_BASE_URL=https://test.checkout.dodopayments.com
DODO_PRODUCT_ID_BASIC=your_basic_product_id
DODO_PRODUCT_ID_PREMIUM=your_premium_product_id
